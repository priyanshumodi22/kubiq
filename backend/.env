# Production Environment Configuration
# This file is committed to git and used when NODE_ENV=production

# Server Configuration
PORT=3001
NODE_ENV=production
BACKEND_DNS=https://api.yourdomain.com
BACKEND_CONTEXT_PATH=/kubiq-api
FRONTEND_CONTEXT_PATH=/kubiq

# Service Configuration
# For PV/PVC deployment, use /app/kubiq/data/services.ini
SERVICES_CONFIG_PATH=/app/kubiq/data/services.ini
POLL_INTERVAL=30000
REQUEST_TIMEOUT=5000

# Data Persistence
# For PV/PVC deployment, use /app/kubiq/data
ENABLE_PERSISTENCE=true
DATA_DIR=/app/kubiq/data
SNAPSHOT_INTERVAL=300000

# Health Check Configuration
MAX_HISTORY_SIZE=100
HEALTH_CHECK_TIMEOUT=5000

# CORS Configuration
FRONTEND_DNS=https://frontend-dns.com
CORS_ORIGIN=https://frontend-dns.com

# Keycloak OIDC Configuration
KEYCLOAK_ENABLED=true
KEYCLOAK_URL=https://Keycloak-dns/auth
KEYCLOAK_REALM=realm-name
KEYCLOAK_CLIENT_ID=kubiq
