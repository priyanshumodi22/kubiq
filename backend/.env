# Production Environment Configuration
# This file is committed to git and used when NODE_ENV=production

# Server Configuration
PORT=3001
NODE_ENV=production
BACKEND_DNS=https://api.yourdomain.com
BACKEND_CONTEXT_PATH=/kubiq-api
FRONTEND_CONTEXT_PATH=/kubiq

# Service Configuration
# For Standalone/VM, use relative paths (./data)
SERVICES_CONFIG_PATH=./data/services.ini
POLL_INTERVAL=30000
REQUEST_TIMEOUT=5000

# Data Persistence
# For Standalone/VM, use relative paths (./data)
ENABLE_PERSISTENCE=true
DATA_DIR=./data
SNAPSHOT_INTERVAL=300000

# Health Check Configuration
MAX_HISTORY_SIZE=100
HEALTH_CHECK_TIMEOUT=5000

# CORS Configuration
FRONTEND_DNS=https://frontend-dns.com
CORS_ORIGIN=https://frontend-dns.com

# Auth Configuration

# Native Authentication
NATIVE_AUTH_ENABLED=true
JWT_SECRET=change-this-secret-in-production-please-random-string-12345

# Keycloak OIDC Configuration (optional, use NATIVE_AUTH_ENABLED=true)
KEYCLOAK_ENABLED=true
KEYCLOAK_URL=https://
KEYCLOAK_REALM=realm-name
KEYCLOAK_CLIENT_ID=kubiq

# Database Configuration
# DB_TYPE: json | mysql | mongo
DB_TYPE=mongo
# MySQL Config
DB_HOST=localhost
DB_PORT=3306
DB_USER=kubiq_user
DB_PASS=secure_password
DB_NAME=kubiq_db

# MongoDB Config (DB_TYPE=mongo)
DB_URI=mongodb://localhost:27017/kubiq_db

# WebAuthn Configuration
# RP_ID = Your domain (e.g., kubiq.com or dashboard.kubiq.com)
RP_ID=<your-domain>

# ORIGIN = Full URL (e.g., https://dashboard.kubiq.com)
ORIGIN=https://<your-domain>